<div class="page-header">
  <h1>Edit your Packages</h1>
</div>

<div class="form-group">
  <div class="col-sm-10">
    <table class="table table-striped">
      <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @software_selection.each do |package| %>
          <%if package.package == 1 %>
              <tr>
                <td></td>
                <td>
                  <label for="progVote-<%= package.name %>">
                    <%= package.name %>
                  </label>
                </td>

                <td><a href="/package/<%= package.id %>/edit">[edit]</a></td>
                <td><a href="/package/<%= package.id %>/delete">[delete]</a></td>
              </tr>
          <% end %>
      <% end %>
      </table>
  </div>
</div>
