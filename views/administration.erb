<div class="page-header">
  <h1>Administration</h1>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <h2>Global - Configuration</h2>

    <form method="post" class="form-horizontal" action="/configuration">
      <input type="hidden" name="_method" value="put">

      <div class="form-group">
        <label for="app_installpath" class="col-sm-2 control-label">App install path</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="app_installpath" value="<%= @app_installpath %>">
        </div>
      </div>

      <div class="form-group">
        <label for="app_installpath" class="col-sm-2 control-label">VM install path</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="vm_installpath" value="<%= @vm_installpath %>">
        </div>
      </div>


      <div class="form-group">
        <label for="app_installpath" class="col-sm-2 control-label">Upload-Folder</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="app_installpath" value="<%= @upload_folder %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-right">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>


<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <h2>Ansible - Configuration</h2>

    <form class="form-horizontal" method="post" action="/ansible">
      <input type="hidden" name="_method" value="put">

      <div class="form-group">
        <label for="hosts" class="col-sm-2 control-label">Hosts</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="hosts" value="<%= @hosts %>">
        </div>
      </div>

      <div class="form-group">
        <label for="sudo" class="col-sm-2 control-label">Sudo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="sudo" value="<%= @sudo %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-right">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <h2>Vagrant - Configuration</h2>

    <form class="form-horizontal" method="post" action="/vagrant">
      <input type="hidden" name="_method" value="put">

      <div class="form-group">
        <label for="hosts" class="col-sm-2 control-label">User</label>
        <div class="col-sm-10">
          <input type="text" name="user" class="form-control" value="<%= @user %>">
        </div>
      </div>

      <div class="form-group">
        <label for="sudo" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" name="pwd" >
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-right">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <h2>Logfile - Configuration</h2>

    <form class="form-horizontal" method="post" action="/vagrant">
      <input type="hidden" name="_method" value="put">

      <div class="form-group">
        <label for="hosts" class="col-sm-2 control-label">General</label>
        <div class="col-sm-10">
          <input type="text" name="logpath" class="form-control" value="<%= @path %>">
        </div>
      </div>

      <div class="form-group">
        <label for="hosts" class="col-sm-2 control-label">Machines</label>
        <div class="col-sm-10">
          <input type="text" name="logpath" class="form-control" value="<%= @machine_log %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-right">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>

<section id="ubuntu_machine">
  <%= @content %>
</section>
