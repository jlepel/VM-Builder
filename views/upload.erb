<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <form method="post" action="/upload" class="form-horizontal" enctype="multipart/form-data">
      <input type="hidden" name="_method" value="post">

      <div class="form-group">
  <div class="col-sm-2 text-right">
    <strong>Files</strong><br />
  </div>
  <div class="col-sm-10" id="file-selector">
    <div class="form-inline">
      <div class="file-item">
        <div class="form-group col-sm-5">
          <input type="file" class="form-control" name="files[]file">
        </div>
        <div class="form-group col-sm-5">
          <label for="exampleInputEmail2">path</label>
          <input type="text" class="form-control" name="files[]path" placeholder="/usr/local">
        </div>
        <div class="form-group col-sm-2">
          <a class="btn btn-default" data-acts-as="file-remove-button">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-10">
    <a class="btn btn-default" id="file-add-button">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      add file
    </a>
  </div>
</div>

<div class="form-group">
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10 text-right">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</div>
</form>
  </div>
</div>

<script src="file_form.js" type="text/javascript"></script>
