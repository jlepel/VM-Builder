<div class="page-header">
  <h1>Your Applications</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <td>ID</td>
      <td>Machine</td>
      <td>Description</td>
      <td>Status</td>
      <td collspand="3"></td>
    </tr>
  </thead>

  <tbody>
    <% @show_machines.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td><%= p.description %></td>
        <td><% if p.status == 0 %>
            offline
          <% else %>
            online
          <% end %>
        </td>
        <td><a href="/<%= p.id %>/share">[share]</a>
        <a href="/export/<%= p.id %>">[export]</a>
        </td>
        <td>
          <a href="/<%= p.id %>/halt">[halt]</a>
          <a href="/<%= p.id %>/destroy">[destroy]</a>
        </td>
        <td>
          <a href="/<%= p.id %>/log">[log]</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
