<div class="page-header">
  <h1>Add Software</h1>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <form method="post" action="/package" class="form-horizontal" enctype="multipart/form-data">

      <div class="form-group">
        <label for="program" class="col-sm-2 control-label">Program</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="program">
        </div>
      </div>

      <div class="form-group">
        <label for="command" class="col-sm-2 control-label">Command</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="command">
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="description">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <select name="software_options" id="software-options" class="software-list" size="5" multiple>
            <% @software_selection.each do |software| %>
              <option><%= software.name %></option>
            <% end %>
          </select>
        </div>

        <div class="text-center col-sm-2">
          <a class="btn" id="removeSelectionButton"><span class="glyphicon glyphicon-arrow-left"></span></a>
          <a class="btn" id="addSelectionButton"><span class="glyphicon glyphicon-arrow-right"></span></a>
        </div>

        <div class="col-sm-4">
          <select id="software-selected" class="software-list" name="selection[]" size="5" multiple>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 text-right">
          <strong>Files</strong><br />
        </div>
        <div class="col-sm-10" id="file-selector">
          <div class="form-inline">
            <div class="file-item">
              <div class="form-group col-sm-5">
                <input type="file" class="form-control" name="files[]file">
              </div>
              <div class="form-group col-sm-5">
                <label for="exampleInputEmail2">path</label>
                <input type="email" class="form-control" name="files[]path" placeholder="/usr/local">
              </div>
              <div class="form-group col-sm-2">
                <a class="btn btn-default" data-acts-as="file-remove-button">
                  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-offset-2 col-sm-10">
          <a class="btn btn-default" id="file-add-button">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            add file
          </a>
        </div>
      </div>

      <div class="form-group">
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-right">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/file_form.js" type="text/javascript"></script>
<script src="/software_selector.js" type="text/javascript"></script>
