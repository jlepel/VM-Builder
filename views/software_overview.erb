<div class="page-header">
  <h1>Edit your Software</h1>
</div>

<div class="form-group">
  <div class="col-sm-10">
    <table class="table table-striped">
      <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th>Command</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @software_selection.each do |software| %>
          <%if software.package == 0 %>
          <tr>
            <td></td>
            <td>
              <label for="progVote-<%= software.name %>">
                <%= software.name %>
              </label>
            </td>
            <td><p class="meta"><code><%= software.description %></code></td>
            <td><p class="meta">Command: <code><%= software.command %></code></td>
            <td><a href="/software/<%= software.id %>/edit">[edit]</a></td>
            <td><a href="/software/<%= software.id %>/delete">[delete]</a></td>
          </tr>
      <% end %>
      <% end %>
      </table>
  </div>
</div>
